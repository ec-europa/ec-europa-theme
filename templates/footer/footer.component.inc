/**
 * Implements hook_atomium_theme_HOOK().
 */
function europa_atomium_theme_footer() {
  return array(
    'footer' => array(
      'variables' => array(
        'footer_left' => NULL,
        'footer_right' => NULL,
        'footer_middle' => NULL,
        'footer_bottom' => NULL,
        'footer_improved' => NULL,
      ),
      'template' => 'footer',
    ),
  );
}

/**
 * Implements hook_atomium_definition_HOOK().
 */
function europa_atomium_definition_footer() {
  return array(
    'label' => 'Footer',
    'description' => 'Footer.',
    'preview' => array(
      'footer_left' => block_get_blocks_by_region('footer_left'),
      'footer_right' => block_get_blocks_by_region('footer_right'),
      'footer_middle' => block_get_blocks_by_region('footer_middle'),
      'footer_bottom' => block_get_blocks_by_region('footer_bottom'),
      'footer_improved' => block_get_blocks_by_region('footer_improved'),
    ),
  );
}

/**
 * Implements hook_preprocess_HOOK().
 */
function europa_preprocess_footer(&$variables, $hook) {
  array_map(function ($item) use (&$variables) {
    $region = 'footer_' . $item;
    $variables[$region] = block_get_blocks_by_region($region);
  }, array('left', 'right', 'middle', 'bottom', 'improved'));
}
